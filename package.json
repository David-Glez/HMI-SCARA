      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.0.1",
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "nodemon": "^2.0.7",
    "wait-on": "^5.3.0"
  },
  "build": {
    "appId": "com.integraautomation.hmiscara",
    "productName": "HMI SCARA",
    "files": [
      "public",
      ".env",
      ".env.production"
    ],
    "extraResources": [
      {
        "from": "./database/",
        "to": "database",
        "filter": [
